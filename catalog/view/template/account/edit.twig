{{ header }}
<style>

.page-wrapper {
    background: #f0f0f0;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
}

/* Profile container box */
.profile-container {
    display: flex;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    max-width: 1100px;
    width: 100%;
    min-height: 600px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}


/* Main content */
.main-content {
    background: white;
    padding: 2rem;
    flex: 1;
}

.page-title {
    color:#FFBB00;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.5rem;
    display: block;
}

.form-label.required:after {
    content: " *";
    color: #ef4444;
}

.form-control-custom {
    width: 100%;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    background: #edf2f7;
}

.form-control-custom:focus {
    outline: none;
    background: #e2e8f0;
}

.btn-continue {
    background: transparent;
    color:#FFBB00;
    border: 2px solid#FFBB00;
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
}

.btn-continue:hover {
    background:#FFBB00;
    color: #1a202c;
}

.row-custom {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
}

@media (max-width: 768px) {
    .row-custom {
        grid-template-columns: 1fr;
    }
    .profile-container {
        flex-direction: column;
        max-width: 100%;
    }
    .sidebar {
        width: 100%;
    }
}
</style>

<div class="page-wrapper">
    <div class="profile-container">
        <!-- Sidebar -->

        {{column_right}}
        


        <!-- Main Content -->
        <div class="main-content">
            <h1 class="page-title">Edit Profile</h1>
            <form id="form-customer" action="{{ save }}" method="post" data-oc-toggle="ajax">
                <fieldset>
                    <div class="row-custom">
                        <div class="form-group">
                            <label for="input-firstname" class="form-label required">First Name</label>
                            <input type="text" name="firstname" value="{{ firstname }}" placeholder="First Name" id="input-firstname" class="form-control-custom"/>
                        </div>
                        <div class="form-group">
                            <label for="input-lastname" class="form-label required">Last Name</label>
                            <input type="text" name="lastname" value="{{ lastname }}" placeholder="Last Name" id="input-lastname" class="form-control-custom"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input-email" class="form-label required">Email address</label>
                        <input type="email" name="email" value="{{ email }}" placeholder="Email address" id="input-email" class="form-control-custom"/>
                    </div>
                    <!-- Phone Number -->
                    <div class="form-group">
                        <label for="input-telephone" class="form-label required">Phone Number</label>
                        <input 
                            type="tel" 
                            name="telephone" 
                            value="{{ telephone }}" 
                            placeholder="Phone Number" 
                            id="input-telephone" 
                            class="form-control-custom"/>
                    </div>

                    {% if config_telephone_display %}
                    <div class="form-group">
                        <label for="input-telephone" class="form-label{% if config_telephone_required %} required{% endif %}">Phone Number</label>
                        <input type="tel" name="telephone" value="{{ telephone }}" placeholder="Phone Number" id="input-telephone" class="form-control-custom"/>
                    </div>
                    {% endif %}
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn-continue">Save</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{{ footer }}
