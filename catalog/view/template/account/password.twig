  <script>
    // Simple countdown timer simulation
    function updateCountdown() {
      const countdownElements = document.querySelectorAll(".countdown");

      countdownElements.forEach((countdown) => {
        const days = countdown.querySelector(
          ".countdown-item:nth-child(1) .countdown-number"
        );
        const hours = countdown.querySelector(
          ".countdown-item:nth-child(2) .countdown-number"
        );
        const minutes = countdown.querySelector(
          ".countdown-item:nth-child(3) .countdown-number"
        );
        const seconds = countdown.querySelector(
          ".countdown-item:nth-child(4) .countdown-number"
        );

        let currentSeconds = parseInt(seconds.textContent);

        if (currentSeconds > 0) {
          seconds.textContent = String(currentSeconds - 1).padStart(2, "0");
        } else {
          seconds.textContent = "59";
          let currentMinutes = parseInt(minutes.textContent);
          if (currentMinutes > 0) {
            minutes.textContent = String(currentMinutes - 1).padStart(2, "0");
          } else {
            minutes.textContent = "59";
            let currentHours = parseInt(hours.textContent);
            if (currentHours > 0) {
              hours.textContent = String(currentHours - 1).padStart(2, "0");
            } else {
              hours.textContent = "23";
              let currentDays = parseInt(days.textContent);
              if (currentDays > 0) {
                days.textContent = String(currentDays - 1).padStart(2, "0");
              }
            }
          }
        }
      });
    }

    // Update countdown every second
    setInterval(updateCountdown, 1000);

    // Tab switching functionality
    document.querySelectorAll(".deals-tab").forEach((tab) => {
      tab.addEventListener("click", function (e) {
        e.preventDefault();

        // Remove active class from all tabs
        document
          .querySelectorAll(".deals-tab")
          .forEach((t) => t.classList.remove("active"));

        // Add active class to clicked tab
        this.classList.add("active");
      });
    });
  </script>
