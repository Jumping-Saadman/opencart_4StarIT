<style>
.row {
  display: flex;
  flex-wrap: nowrap;
  background-color: #567595;
  border-radius: 15px;
}

.sidebar {
  width: 25%;
  border-radius: 15px;
}

.col {
  width: 75%;
  padding: 20px;
}

.container {
  padding: 2rem;
  max-width: 72rem;
  margin: 0 auto;
}

.table-wrapper {
  background-color: white;
  border-radius: 0.5rem;
  border: 1px solid #e5e7eb;
  overflow: hidden;
}

.table {
  width: 100%;
  border-collapse: collapse;
}

.table thead {
  display: none;
}
.table-row {
  transition: background-color 0.2s ease;
}

.table-row:hover {
  background-color: #f9fafb;
}

.table-cell {
  padding: 1.5rem;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.order-header {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.order-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: #111827;
  margin: 0;
}

.order-date {
  font-size: 0.875rem;
  color: #6b7280;
  margin: 0;
}

/* Added horizontal line styling */
.horizontal-line {
  width: 100%;
  height: 1px;
  background-color: #0a0a0a;
  margin-top: 1rem;
}

.product-details {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.product-image {
  width: 4rem;
  height: 4rem;
  background-color: #e5e7eb;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.product-image-placeholder {
  width: 2rem;
  height: 2rem;
  background-color: #d1d5db;
  border-radius: 0.25rem;
}

.product-name {
  flex: 1;
  font-size: 1rem;
  font-weight: 500;
  color: #111827;
  line-height: 1.25;
  margin: 0;
}

.product-price {
  text-align: right;
  font-size: 1.125rem;
  font-weight: 600;
  color: #f59e0b;
}

.status-wrapper {
  text-align: center;
}

.status-badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.875rem;
  font-weight: 500;
  background-color: #dcfce7;
  color: #166534;
}

.action-wrapper {
  text-align: right;
}

.view-button {
  padding: 0.5rem 1.5rem;
  border-radius: 9999px;
  border: 1px solid #d1d5db;
  background-color: transparent;
  color: #374151;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.view-button:hover {
  background-color: #f9fafb;
}



</style>

{{ header }}
<div id="account-order" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    <div class="sidebar">
      {{ column_left }}
    </div>
    <div id="content" class="col">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      {% if orders %}
        <div class="container">
          <div class="table-wrapper">
            <table class="table">
              <thead>
                <tr>
                  <th class="text-end">{{ column_order_id }}</th>
                  <th class="text-end">{{ column_product_total }}</th>
                  <th>{{ column_status }}</th>
                  <th class="text-end">{{ column_total }}</th>
                  <th>{{ column_date_added }}</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for order in orders %}
                  <tr class="table-row">
                    <td class="table-cell">
                      <div class="content-wrapper">
                        <div class="order-header">
                          <h3 class="order-title">{{ order.order_id }}</h3>
                          <p class="order-date">{{ order.date_added }}</p>
                          <div class="horizontal-line"></div>
                        </div>

                        <div class="product-details">
                          <div class="product-image">
                            <div class="product-image-placeholder"></div>
                          </div>

                          <div>
                            <h4 class="product-name">BenQ PhotoVue SW272Q 27" QHD IPS Monitor</h4>
                          </div>

                          <div class="product-price">
                            <span>BDT 99,000</span>
                          </div>

                          <div class="status-wrapper">
                            <span class="status-badge">{{ order.status }}</span>
                          </div>

                          <div class="action-wrapper">
                            <button class="view-button"><a href="{{ order.view }}"></a></button>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-6 text-start">{{ pagination }}</div>
          <div class="col-sm-6 text-end">{{ results }}</div>
        </div>
      {% else %}
        <p>{{ text_no_results }}</p>
      {% endif %}
      <div class="text-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
