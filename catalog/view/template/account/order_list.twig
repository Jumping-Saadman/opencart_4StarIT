<style>

  .container-main-content .row {
    display: flex;
    flex-wrap: nowrap;
    background-color: #ffffff;
    border-radius: 15px;
    width: 1024px;
    margin: auto;
    height: auto;
  }

  .row .sidebar-container {
    width: 290px;

  }

  .row .col {
    width: calc(1024px - 290px);
    padding: 20px;
  }

  .heading-title {
    color: rgba(255, 187, 0, 1);
  }

  .container-table {
    max-width: 72rem;
    margin: 0 auto;
  }

  .table-wrapper {
    background-color: white;
    overflow: hidden;
  }

  .table {
    width: 100%;
    border-spacing: 5px;
    border-collapse: separate;
    border-spacing: 1rem;
  }

  .table thead {
    display: none;
  }
  .table-row {
    gap: 1px;
  }

  .table-row:hover {
    background-color: #f9fafb;
  }

  .table-cell {
    padding: 1.5rem;
    box-shadow: 4px 4px 6px 1px rgba(0, 0, 0, 1), 4px 4px 4px 1px rgba(0, 0, 0, 1);
    border-radius: 0.5rem;
    border-width: 1px;
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
  }

  .order-header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .order-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827;
    margin: 0;
  }

  .order-date {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
  }

  /* Added horizontal line styling */
  .horizontal-line {
    width: 100%;
    height: 1px;
    background-color: #b2b2b2;
    margin-top: 7px;
    margin-bottom: 7px;
  }

  .product-details {
    display: flex;
    align-items: center;
    gap: 0;
    justify-content: center;
    text-align: center;
  }

  .product-details img {
    width: 4rem;
    height: 4rem;
    background-color: #e5e7eb;
    border-radius: 0.5rem;
  }

  .product-name {
    width:fit-content;
    height: 20;
    gap: 10px;
    opacity: 1;
    padding: 5px 5px;

    font-weight: 600;
    font-size: 14px;
    line-height: 112.00000000000001%;
    letter-spacing: 0.1px;
    margin: 0;
  }

  .product-price {
    width: 105;
    height: 20;
    min-width: 4px;
    max-width: 105px;
    gap: 10px;
    opacity: 1;
    padding: 5px 5px;

    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0.1px;

    color: rgba(255, 187, 0, 1);
  }

  .status-badge {
    width: 106.33332824707031;
    height: 20;
    max-width: 106.33px;
    gap: 10px;
    opacity: 1;
    padding-top: 5px 5px;

    border-radius: 9999px;
    font-size: 14px;
    font-weight: 500;
    color: rgba(1, 156, 66, 1);
  }

  .view-button {
    width: 60;
    height: 34;
    max-width: 60px;
    gap: 10px;
    opacity: 1;
    padding-top: 7px;
    padding-right: 14px;
    padding-bottom: 7px;
    padding-left: 14px;
    border-radius: 40px;
    border-width: 2px;

    border: 3px solid rgba(31, 31, 31, 1);
    background-color: transparent;
    transition: background-color 0.2s ease;

    justify-content: center;
    text-align: center;
  }

  .view-button a {
    text-align: center;
    text-decoration: none;
    color: rgba(31, 31, 31, 1);
    font-weight: 700;
    font-style: Bold;
    font-size: 12px;
    line-height: 20px;
    letter-spacing: -0.23px;

  }

  .view-button:hover {
    background-color: #f9fafb;
  }



</style>

{{ header }}
<div id="account-order" class="container-main-content">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    <div class="sidebar-container">
      {{ column_left }}
    </div>
    
    <div id="content" class="col">{{ content_top }}
      <h1 class="heading-title">{{ heading_title }}</h1>
      {% if orders %}
        <div class="container-table">
          <div class="table-wrapper">
            <table class="table">
              <thead>
                <tr>
                  <th class="text-end">{{ column_order_id }}</th>
                  <th class="text-end">{{ column_product_total }}</th>
                  <th>{{ column_status }}</th>
                  <th class="text-end">{{ column_total }}</th>
                  <th>{{ column_date_added }}</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for order in orders %}
                  <tr class="table-row">
                    <td class="table-cell">
                      <div class="content-wrapper">
                        <div class="order-header">
                          <h3 class="order-title">Order #{{ order.order_id }}</h3>
                          <p class="order-date">Date Added: {{ order.date_added }}</p>
                          
                        </div>
                        <div class="horizontal-line"></div>
                        <div class="product-details">
                          <img src="image\placeholder.png" alt="placeholder">
                          <h4 class="product-name">BenQ PhotoVue SW272Q 27" QHD IPS Monitor</h4>
                          <span class="product-price">BDT 99,000</span>
                          <span class="status-badge">{{ order.status }}</span>
                          <button class="view-button"><a href="{{ order.view }}">View</a></button>
                          
                        </div>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-6 text-start">{{ pagination }}</div>
          <div class="col-sm-6 text-end">{{ results }}</div>
        </div>
      {% else %}
        <p>{{ text_no_results }}</p>
      {% endif %}
      <div class="text-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
