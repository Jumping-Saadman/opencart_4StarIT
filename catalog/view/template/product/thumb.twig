<style>
  .product-thumb {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    margin-bottom: 20px;
    border: 2px solid transparent;
    max-width: 280px;
  }

  .product-thumb:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
  }

  .image {
    position: relative;
    padding: 20px 20px 10px 20px;
    background: white;
    text-align: center;
  }

  .product-category {
    position: absolute;
    top: 12px;
    left: 12px;
    background: rgba(255, 255, 255, 0.9);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    font-weight: 500;
  }

  .product-top-bar {
  position: absolute;
  top: 12px;
  left: 12px;
  right: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 5;
}

.category-label {
  font-size: 13px;
  font-weight: 600;
  color: #333;
}

.top-right {
  display: flex;
  align-items: center;
  gap: 8px;
}

.wishlist-container {
  position: relative;
}

.wishlist-btn {
  background: rgba(255, 255, 255, 0.95);
  border: none;
  border-radius: 50%;
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.wishlist-btn:hover {
  background: white;
  transform: scale(1.1);
}

.wishlist-btn i {
  color: #666;
  font-size: 13px;
}

.discount-badge {
  background: linear-gradient(to right, #FFBB00, #FF1A1A);
  color: white;
  padding: 4px 10px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 600;
  white-space: nowrap;
}


  .product-title-inside {
    margin-top: 40px;
    margin-bottom: 10px;
    text-align: left;
  }

  .product-title-inside h4 {
    font-size: 16px;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  .product-title-inside h4 a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .product-title-inside h4 a:hover {
    color: #FFBB00;
  }

  .image img {
    max-width: 100%;
    height: auto;
    transition: transform 0.3s ease;
  }

  .product-thumb:hover .image img {
    transform: scale(1.05);
  }

  .content {
    padding: 20px;
    padding-bottom: 10px;
  }

  .price {
    margin: 12px 0 16px 0;
    display:flex;
    align-items:center;
    gap:7px;
  }

  .price-new {
    font-size: 20px;
    font-weight: 700;
    color: #FFBB00;
    margin-right: 8px;
  }

  .price-old {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .rating {
    margin: 8px 0;
  }

  .rating .fa-star {
    color: #ffc107;
    font-size: 14px;
    margin-right: 2px;
  }

  .rating .fa-regular {
    color: #e0e0e0;
  }

  .product-actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
    margin-top: 16px;
  }

  .action-buttons {
  display: flex;
  gap: 10px; 
  margin-right: auto;
    
  }


  .action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  background: transparent;
  cursor: pointer;
  color: #666;
  font-size: 10px;
  text-align: center;
  line-height: 10px;
  padding: 0px;
  margin: 0px;
    
  }
    
  .action-btn i {
  height:18px;
  width:23px;
  margin-bottom: 6px;
  color: #666;
}

  .action-btn:hover i,
.action-btn:hover span {
    
    border-color: #FFBB00;
    color: #FFBB00;
  }

  .buy-now-form {
  flex: 1; /* âœ… form takes remaining space */
}
  .buy-now-btn {
  
  min-width: 56px;
  width: 100%;
  background: white;
  border: 2px solid #28a745;
  color: #28a745;
  padding: 10px 14px; 
  border-radius: 15px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  text-decoration: none;
  display: inline-flex;  
  align-items: center;   
  justify-content: center; 
  white-space: nowrap;    
}


  .buy-now-btn:hover {
    background: #28a745;
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
  }

  @media (max-width: 768px) {
    .content {
      padding: 16px;
    }

    .product-actions {
      flex-direction: column;
      gap: 8px;
    }

    .action-buttons {
      order: 2;
      justify-content: center;
    }

    .buy-now-btn {
      order: 1;
    }
  }
</style>

<div class="product-thumb">
  <div class="image">

    <!-- Top Header Row -->
    <div class="product-top-bar">
      <!-- Left: Category -->
      <span class="category-label">Monitor</span>

      <!-- Right: Wishlist + Discount -->
      <div class="top-right">
        <form method="post" data-oc-toggle="ajax" class="wishlist-container">
          <button type="submit" formaction="{{ wishlist_add }}" class="wishlist-btn">
            <i class="fa-regular fa-heart"></i>
          </button>
          <input type="hidden" name="product_id" value="{{ product_id }}" />
          <input type="hidden" name="quantity" value="{{ minimum }}" />
        </form>

       
          <div class="discount-badge">
            Save Tk 19,500
          </div>
        
      </div>
    </div>

    <div class="product-title-inside">
      <h4><a href="{{ href }}">{{ name }}</a></h4>
    </div>

    <a href="{{ href }}">
      <img src="{{ thumb }}" alt="{{ name }}" title="{{ name }}" class="img-fluid" />
    </a>
  </div>


  <div class="content">
    {% if price %}
  <div class="price">
    {% if special and special != price %}
      {# Product has a special price different from regular price #}
      <span class="price-new">{{ special }}</span>
      <span class="price-old">{{ price }}</span>
    {% else %}
      {# No special price or special price same as regular price #}
      <span class="price-new">{{ price }}</span>
    {% endif %}
  </div>
{% endif %}

    {% if review_status and rating %}
      <div class="rating">
        {% for i in 1..5 %}
          {% if rating < i %}
            <i class="fa-regular fa-star"></i>
          {% else %}
            <i class="fa-solid fa-star"></i>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="product-actions">
      <div class="action-buttons">
        <form method="post" data-oc-toggle="ajax" style="display: inline;">
          <button type="submit" formaction="{{ compare_add }}" class="action-btn" data-bs-toggle="tooltip" title="{{ button_compare }}">
            <i class="fa-solid fa-arrow-right-arrow-left" style="font-size: 13px;"></i>
              <span>Add to</span>
              <span>compare</span>
          </button>
          <input type="hidden" name="product_id" value="{{ product_id }}" />
          <input type="hidden" name="quantity" value="{{ minimum }}" />
        </form>

        <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#cart" style="display: inline;">
          <button type="submit" formaction="{{ cart_add }}" class="action-btn" data-bs-toggle="tooltip" title="{{ button_cart }}">
            <i class="fa-solid fa-shopping-cart" style="font-size: 14px;"></i>
              <span>Add to</span>
              <span>Cart</span>
          </button>
          <input type="hidden" name="product_id" value="{{ product_id }}" />
          <input type="hidden" name="quantity" value="{{ minimum }}" />
        </form>
      </div>

      <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#cart" class="buy-now-form" style="flex: 1;">
        <button type="submit" formaction="{{ cart_add }}" class="buy-now-btn">
          Buy Now
        </button>
        <input type="hidden" name="product_id" value="{{ product_id }}" />
        <input type="hidden" name="quantity" value="{{ minimum }}" />
      </form>
    </div>
  </div>
</div>