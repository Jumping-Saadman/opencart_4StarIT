<style>
  .reviews-container {
    width: 898px;
    height: 247px;
    border: 1px solid #ccc;
    border-radius: 10px;
    font-family: Arial, sans-serif;
  }
  .reviews-title {
    height: 31px;
    color: #f5a623;
    font-size: 24px;
    border-bottom: .5px solid rgba(255, 187, 0, 1);
  }
  .reviews-title span {
    font-weight: 600;
    font-style: SemiBold;
    font-size: 16px;
    line-height: 31px;
    letter-spacing: -0.23px;
    padding-left: 28px;

  }
  .reviews-paragraph {
    height: 30px;
    font-weight: 400;
    font-style: Regular;
    font-size: 14px;
    line-height: 30px;
    letter-spacing: -0.23px;
    text-align: justify;
    padding-left: 28px;
  }
  .review-section {
    display: flex;
    justify-content: center;
    width: 898px;
    height: 186px;
    padding-left: 28px;
    padding-right: 28px;
    gap: 10px;
  }
  .write-review {
    width: 416px;
    height: 166px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 10px;
  }
  .write-review h3 {
    height: 20px;
    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: -0.23px;
    text-align: justify;
    margin-bottom: 0;
  }
  .write-review .input-group-here {
    display: flex;
    justify-content: space-between;
    width: 416px;
    height: 36px;
    gap: 10px;
  }

