    width: 50%;
    height: 36px;
    margin-bottom: 10px;
    padding: 10px;
    border-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    background-color: #f0f4f8;
    border: 0;
  }

  .input-group-here input::placeholder {
    
    font-weight: 400;
    font-style: Regular;
    font-size: 10px;
    line-height: 100%;
    letter-spacing: 0%;

  }
  
  .write-review textarea {
    width: 100%;
    height: 110px;
    padding: 10px;
    border-radius: 10px;
    background-color: #f0f4f8;
    border: 0;
    resize: none;
  }
  .write-review textarea::placeholder {
    font-weight: 400;
    font-style: Regular;
    font-size: 10px;
    line-height: 100%;
    letter-spacing: 0%;
  }
  .write-review .input-group input {
    width: 198px;
  }
  .rating-section {
    width: 416px;
    display: flex;
    flex-direction: column;
    justify-content: start;
    gap: 10px;
    color: rgba(31, 31, 31, 1);
  }
  .rating-section label {
    font-size: 16px;
    height: 20px;

    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: -0.23px;
    text-align: center;

  }
  .rating-radio {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
  }
  .rating-radio-options {
    background: rgba(233, 239, 246, 1);
    width: 416px;
    height: 35px;
    opacity: 1;
    padding-top: 10px;
    padding-right: 16px;
    padding-bottom: 10px;
    padding-left: 16px;
    border-radius: 10px;

    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
  }
  .rating-radio input[type="radio"] {
    margin-right: 5px;
  }
  .submit-btn-section {
    display: flex;
    justify-content: flex-end;
  }
  .submit-btn {
    width: 100%;
    height: 35px;
    padding: 0 10px;
    color: orange;
    border: 2px solid orange;
    border-radius: 10px;
    cursor: pointer;
    background-color: #fff;
    transition: all 0.3s ease;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
  }
  .submit-btn:hover {
    color: white;
    background-color: orange;
  }

  .hide-it {
    display: none;
  }
</style>

