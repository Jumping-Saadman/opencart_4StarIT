{{ header }}
<div id="account-password" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row-container">
    <div class="sidebar-container">{{ column_left }}</div>
    
    <div id="content" class="col-password-area">{{ content_top }}
      <h1 class="heading-title">{{ heading_title }}</h1>
      <form id="form-password" action="{{ save }}" method="post" data-oc-toggle="ajax">
        <fieldset>
          <div class="row-form-field required">
            <label for="input-password" class="required-input col-md-3">{{ entry_old_password }}</label>
            <div>
              <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_pass_placeholder }}" id="input-password" class="form-control" autocomplete="new-password"/>
              <div id="error-password" class="invalid-feedback"></div>
            </div>
          </div>
          <div class="row-form-field required">
            <label for="input-password" class="required-input col-md-3">{{ entry_password }}</label>
            <div>
              <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_pass_placeholder }}" id="input-password" class="form-control" autocomplete="new-password"/>
              <div id="error-password" class="invalid-feedback"></div>
            </div>
          </div>
          <div class="row-form-field required">
            <label for="input-confirm" class="required-input col-md-3">{{ entry_confirm }}</label>
            <div>
              <input type="password" name="confirm" value="{{ confirm }}" placeholder="{{ entry_pass_placeholder }}" id="input-confirm" class="form-control"/>
              <div id="error-confirm" class="invalid-feedback"></div>
            </div>
          </div>
        </fieldset>
        <div class="row-button">
          <div class="col-button">
            <a href="{{ back }}" class="btn btn-light">{{ button_back }}</a>
          </div>
          <div class="col-continue-button text-center">
            <button type="submit" class="btn btn-primary"><span>{{ button_continue }}</span></button>
          </div>
        </div>
      </form>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
