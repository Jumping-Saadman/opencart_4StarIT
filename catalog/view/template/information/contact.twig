<script>
  document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.querySelector(".search-input");
    const cards = document.querySelectorAll(".outlets-cards > div");
    const loader = document.getElementById("loader");
    const cardsContainer = document.querySelector(".outlets-cards");

    searchInput.addEventListener("keydown", function (event) {
      if (event.key === "Enter") {
        event.preventDefault();
        const query = searchInput.value.trim().toLowerCase();

        // Show loader & hide cards
        loader.style.display = "block";
        cards.forEach((card) => (card.style.display = "none"));

        // Simulate loading delay (like fetching data)
        setTimeout(() => {
          loader.style.display = "none";

          let matchFound = false;
          cards.forEach((card) => {
            const address = card.innerText.toLowerCase();
            if (address.includes(query)) {
              card.style.display = "flex";
              matchFound = true;
            }
          });

          // If no match, show message
          if (!matchFound) {
            cardsContainer.innerHTML = `<p style="text-align:center;color:#777;">No outlets found in "${query}"</p>`;
          }
        }, 1000); // 1 second delay
      }
    });
  });
</script>
