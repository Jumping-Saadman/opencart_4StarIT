{{ header }}
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Montserrat", sans-serif;
  }

  .main-wrapper {
    background-color: #f5f5f5;
    padding: 40px 20px;
    min-height: 100vh;
  }

  .container {
    max-width: 1220px;
    margin: 0 auto;
    width: 100%;
  }

  .contact-main-container {
    background-color: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    width: 1220px;
    height: 765px;
    margin: auto;
  }

  /* Upper Black Section */
  .contact-section {
    display: flex;
    flex-direction: column;
    background-color: rgba(31, 31, 31, 1);
    color: white;
    border-radius: 15px 15px 0 0;
    height: 287px;
    justify-content: space-evenly;
    align-items: center;
  }

  .contact-title {
    text-align: center;
    font-weight: 600;
    font-style: SemiBold;
    font-size: 24px;
    line-height: 29px;
    letter-spacing: 0%;
    color: rgb(0, 0, 0);
    background-color: yellow;
    width: 134px;
    height: 29px;
    border-radius: 6px;
    gap: 20px;
    padding: 5px;
    margin-bottom: 0;
  }

  .contact-content {
    display: flex;
    flex-direction: row;
    gap: 20px;
    justify-content: space-between;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 570px;
  }

  .info-box {
    background-color: transparent;
    border: 2px solid orange;
    border-radius: 15px;
    padding: 25px 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    transition: all 0.3s ease;
    cursor: pointer;
    height: 89px;
  }

  .info-box:hover {
    background-color: #ffbb00;
  }

  .info-icon {
    width: 26.518310546875px;
    height: 26.570955276489258px;
    opacity: 1;
    top: 2.67px;
    left: 2.82px;
  }

  .info-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .info-content h3 {
    font-size: 14px;
    font-weight: 400;
    margin-bottom: 5px;
    opacity: 0.8;
    color: #ffffff;
  }

  .info-content p {
    font-size: 14px;
    font-weight: 700;
    margin: 0;
    color: #ffffff;
  }

  .support-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 570px;
  }

  .support-box {
    background-color: transparent;
    border: 2px solid #ffbb00;
    border-radius: 15px;
    padding: 25px 40px;
    width: 100%;
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
    cursor: pointer;
    height: 198px;
  }

  .customer-icon {
    width: 120px;
    height: 120px;
    flex-shrink: 0;
  }

  .customer-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .support-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: left;
    flex: 1;
    width: 243px;
    height: 93px;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    height: 42px;
    gap: 5px;
  }

  .support-text {
    height: 20px;
    font-size: 16px;
    opacity: 0.8;
    margin-bottom: 0;
    color: #ffffff;
  }

  .support-title {
    height: 17px;
    font-size: 24px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0;

    font-weight: 700;
    font-style: Bold;
    font-size: 24px;
    line-height: 100%;
    letter-spacing: 0%;
  }

  .arrow-icon {
    width: 32px;
    height: 31px;
    background-color: #1f1f1f;
    border: 2px solid #ffbb00;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.9s ease;
  }

  .arrow-icon:hover {
    background-color: #ffbb00;
    color: white;
  }

  .arrow-icon svg {
    width: 16px;
    height: 16px;
    fill: #ffbb00;
    transition: all 0.9s ease;
  }

  .arrow-icon:hover svg {
    fill: white;
  }

  /* Lower White Section */
  .outlets-section {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 0 0 15px 15px;
  }

  .outlets-header-container {
    display: flex;
    justify-content: center;
    width: 1180px;
    height: 112px;
    padding: 10px;
    gap: 5px;
  }

  .outlets-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 1160px;
    height: 92px;
    border-radius: 10px;
    gap: 15px;
    box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.2);
    padding-top: 15px;
    padding-right: 10px;
    padding-bottom: 15px;
    padding-left: 10px;
  }

  .outlets-title {
    font-size: 16px;
    font-weight: 600;
    color: #ffbb00;
    margin: 0;
    letter-spacing: 0.1px;
    width: 50%;
    height: 31px;

    font-weight: 600;
    font-style: SemiBold;
    line-height: 31px;
    letter-spacing: 0.1px;
    vertical-align: middle;
  }

  .search-container {
    width: 50%;
    height: 62px;
    padding: 10px;
    gap: 10px;
  }

  .search-input {
    width: 100%;
    height: 42px;
    padding: 10px 48px 10px 10px;
    border: 1px solid #5e5c5c;
    border-radius: 12px;
    gap: 4px;
    font-size: 12px;
    outline: none;
    background: #ffffff;
    color: #5e5c5c;
    min-width: 220px;
    transition: background-color 0.3s ease;
  }

  .search-input:hover {
    background-color: rgb(211, 211, 211);
  }

  .search-input::placeholder {
    color: #5e5c5c;
    font-weight: 300;
    letter-spacing: 0.5px;
  }

  .search-icon {
    position: relative;
    left: 509px;
    bottom: 23px;
    transform: translateY(-50%);
    width: 24px;
    height: 24px;
    color: #5e5c5c;
    cursor: pointer;
    transition: background-color 0.3s ease;
    border-radius: 50%;
  }

  .search-icon:hover {
    background-color: #cbcbcb;
    border-radius: 50%;
  }

  .search-icon svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  .outlets-cards {
    display: grid;
    height: 316px;
    grid-template-columns: repeat(auto-fit, minmax(275px, 1fr));
    gap: 20px;
    border-radius: 15px;
    padding: 10px;
  }

  .outlets-cards > div {
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(121, 121, 121, 0.5);
    padding: 15px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .outlets-cards-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
  }

  .outlets-cards-title .outlets-cards h3 {
    color: #ffbb00;
    font-size: 14px;
    font-weight: 700;
    line-height: 24px;
    letter-spacing: 0.5px;
    margin: 0;
  }

  .outlets-cards a {
    background: #ffbb00;
    color: #ffffff;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
    align-self: flex-start;
    display: flex;
    align-items: center;
    gap: 5px;
    width: 69px;
    height: 26px;
    transition: all 0.9s ease;
  }

  .outlets-cards-title a:hover {
    background: #ca9400;
  }

  .outlets-cards a svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    
  }

  .outlets-cards strong {
    display: block;
    margin-bottom: 5px;
    font-size: 12px;
    font-weight: 600;
    color: #1f1f1f;
    line-height: 24px;
    letter-spacing: 0.5px;
    border-top: .5px solid rgba(177, 177, 177, 1);
    border-bottom: .5px solid rgba(177, 177, 177, 1);
  }

  .outlets-cards p {
    margin: 0;
    color: #5e5c5c;
    font-size: 12px;
    font-weight: 500;
    line-height: 15px;
    letter-spacing: 0.5px;
  }

  .outlets-cards div:last-child span {
    border: 1px solid #ffbb00;
    border-radius: 10px;
    padding: 0 10px;
    font-size: 10px;
    font-weight: 500;
    line-height: 24px;
    letter-spacing: 0.5px;
    color: #1f1f1f;
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .outlet-hours {
    display: flex;
    gap: 8px;
    height: 27px;
  }

  .outlet-hours span {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ffbb00;
    border-radius: 10px;
    padding: 0;
    font-size: 10px;
    color: #1f1f1f;
    height: 27px;
  }

  /* Search Loading Animation */
  .loader {
    border: 4px solid #f3f3f3;
    border-top: 4px solid #ffbb00;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 0.8s linear infinite;
    margin: 40px auto;
    display: none;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .contact-content {
      flex-direction: column;
      gap: 30px;
    }

    .contact-info,
    .support-section {
      width: 100%;
    }

    .outlets-header {
      flex-direction: column;
      gap: 20px;
      align-items: stretch;
    }

    .search-container {
      max-width: 100%;
    }

    .contact-title {
      font-size: 28px;
    }

    .info-box,
    .support-box {
      padding: 20px;
    }

    .contact-section,
    .outlets-section {
      padding: 20px;
    }

    .outlets-cards {
      grid-template-columns: 1fr;
    }
  }
</style>

